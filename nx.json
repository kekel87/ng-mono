{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.angular.json"]
  },
  "targetDefaults": {
    "@angular-devkit/build-angular:application": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest-setup.angular.ts",
        "{workspaceRoot}/jest.config.angular.ts",
        "{workspaceRoot}/jest.preset.js",
        "{projectRoot}/jest.config.ts",
        { "externalDependencies": ["jest"] }
      ],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "runtime-config": {
      "inputs": ["default"]
    },
    "deploy": {
      "inputs": ["default"]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/.eslintrc.angular.json",
        "{workspaceRoot}/.eslintrc.cypress.json",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.prettierignore",
        "{workspaceRoot}/.prettierrc",
        "{projectRoot}/.eslintrc.json",
        { "externalDependencies": ["eslint"] }
      ],
      "cache": true
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    }
  ],
  "generators": {
    "@nx/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "playwright"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "cacheDirectory": ".cache/nx",
  "cli": {
    "cache": {
      "enabled": true,
      "environment": "all",
      "path": ".cache/angular"
    }
  }
}
