{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "ng-mono",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e"],
        "cacheDirectory": ".cache/nx"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.angular.config.angular.ts",
        "{workspaceRoot}/jest.config.angular.ts",
        "{workspaceRoot}/jest.preset.js"
      ]
    },
    "e2e": {
      "inputs": ["default", "^production", "{workspaceRoot}/tsconfig.cypress.json"]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/.eslintrc.angular.json",
        "{workspaceRoot}/.eslintrc.cypress.json",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.prettierignore",
        "{workspaceRoot}/.prettierrc"
      ]
    },
    "runtime-config": {
      "inputs": ["default"]
    },
    "deploy": {
      "inputs": ["default"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json"
    ],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.angular.json"]
  },
  "generators": {
    "@nx/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "cli": {
    "cache": {
      "enabled": true,
      "environment": "all",
      "path": ".cache/angular"
    }
  },
  "defaultProject": "netatmo"
}
