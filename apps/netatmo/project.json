{
  "name": "netatmo",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "ng-mono",
  "sourceRoot": "apps/netatmo/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/netatmo",
        "index": "apps/netatmo/src/index.html",
        "browser": "apps/netatmo/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/netatmo/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/netatmo/src/favicon.ico", "apps/netatmo/src/assets"],
        "styles": [
          "./node_modules/normalize.css/normalize.css",
          "apps/netatmo/src/styles/theming.scss",
          "apps/netatmo/src/styles/styles.scss"
        ],
        "stylePreprocessorOptions": {
          "includePaths": ["apps/netatmo/src/styles"]
        },
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "port": 4201
      },
      "configurations": {
        "production": {
          "buildTarget": "netatmo:build:production"
        },
        "development": {
          "buildTarget": "netatmo:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/netatmo/**/*.ts", "apps/netatmo/**/*.html"],
        "cache": true,
        "cacheLocation": ".cache/eslint",
        "cacheStrategy": "content"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/netatmo/jest.config.ts",
        "cacheDirectory": "../../.cache/jest/netatmo"
      }
    },
    "runtime-config": {
      "command": "echo $RUNTIME_CONFIG_NETATMO_JSON | base64 -d > apps/netatmo/src/assets/runtime-config.json"
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "echo '/* /index.html 200' > dist/apps/netatmo/_redirects",
            "forwardAllArgs": false
          },
          "netlify deploy --site c4ecaf62-311b-4189-8303-fee917451d56 --dir dist/apps/netatmo"
        ],
        "parallel": false
      }
    }
  }
}
