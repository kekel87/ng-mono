{
  "extends": ["../../.eslintrc.angular.json"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["apps/netatmo/tsconfig.*?.json"]
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "net",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "net",
            "style": "kebab-case"
          }
        ],
        "@typescript-eslint/naming-convention": 0
      }
    }
  ]
}
